rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isChatParticipant(chatId) {
      let uids = chatId.split('_'); 
      return request.auth.uid == uids[0] || request.auth.uid == uids[1];
    }
    
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == userId;

      match /repairs/{repairId} { allow read, write: if request.auth != null && request.auth.uid == userId; }
      match /bills/{billId} { allow read, write: if request.auth != null && request.auth.uid == userId; }
      match /calendar/{documentId} { allow read, write: if request.auth != null && request.auth.uid == userId; }
      match /settings/{documentId} { allow read, write: if request.auth != null && request.auth.uid == userId; }
      match /notes/{noteId} { allow read, write: if request.auth != null && request.auth.uid == userId; }
      match /history/{historyId} { allow read, write: if request.auth != null && request.auth.uid == userId; }

      // Regla para artifacts (metadata, etc)
      match /profileData/{documentId} { allow read, write: if request.auth != null && request.auth.uid == userId; }

      // =====================================
      // NUEVA ESTRUCTURA SHARED ORGANIZADA (FLAT)
      // =====================================
      
      // 2. Bandeja de Salida (OUTBOX)
      // users/{userId}/shared_outbox/{docId}
      match /shared_outbox/{documentId} {
         allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Reglas para configuraciones de grupos (dentro de users)
      // Permitir que el creador del grupo pueda crear configuraciones para todos los miembros
      match /groupSettings/{groupId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null; // Permitir crear para cualquier usuario autenticado
      }
    }

    // Regla global para collectionGroup 'shared_outbox'
    // Permite buscar en TODAS las outboxes documentos dirigidos al usuario actual
    match /{path=**}/shared_outbox/{documentId} {
      allow read: if request.auth != null && resource.data.recipientId == request.auth.uid;
    }

    match /chats/{chatId} {
      match /messages/{messageId} {
        allow read, write: if request.auth != null && isChatParticipant(chatId);
      }
      allow read: if request.auth != null && isChatParticipant(chatId);
    }

    // Reglas para grupos
    match /groups/{groupId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.members;
      allow create: if request.auth != null && request.auth.uid in request.resource.data.members;
      allow update, delete: if request.auth != null && request.auth.uid in resource.data.members;
    }


    // Reglas para mensajes (colecci√≥n global)
    match /messages/{messageId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.senderId;
    }
    
    // Regla para artifacts (fuera de users/{userId})
    match /artifacts/{appId}/users/{userId}/profileData/{documentId} {
       allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
